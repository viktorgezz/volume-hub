server:
  port: 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: api-t-connector
          uri: ${uri.api.app}
          predicates:
            - Path=/public/api/v1/**
        - id: definition-of-anomaly
          uri: ${uri.define.anomaly}
          predicates:
            - Path=/public/api/v1/**

springdoc:
  api-docs:
    enabled: true
  swagger-ui:
    enabled: true
    path: /swagger-ui.html
    url: /openapi.json
